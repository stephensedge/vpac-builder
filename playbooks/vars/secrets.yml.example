---
# Required secrets for ISO and cloud-init playbooks.
# Copy this file to secrets.yml and fill in your values:
#
#   cp secrets.yml.example secrets.yml
#
# secrets.yml is gitignored and will not be committed.
# Optionally encrypt with: ansible-vault encrypt secrets.yml

# Root password baked into the kickstart ISO
root_password: changeme

# Password for the admin user created by cloud-init on first boot
admin_user_password: changeme

# SSH public key added to the admin user's authorized_keys.
# Paste the contents of your public key file (e.g. ~/.ssh/id_ed25519.pub)
admin_user_ssh_pubkey: "ssh-ed25519 AAAA... user@host"
